<h1>Login to the Task app.</h1>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<%= form_tag sessions_path do |form| %>
  <div class=”field”>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class=”field”>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class=”actions”>
    <%= submit_tag "Login" %>
  </div>
<% end %>
